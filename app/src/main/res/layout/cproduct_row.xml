<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imageViewCProduct"
        android:layout_width="334dp"
        android:layout_height="232dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/art"
        android:background="@drawable/pictures_border"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvIdCProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:text="ProductId"
            android:textColor="@color/design_default_color_on_primary"
            android:textSize="24sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvNameCProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:text="Name"
            android:textColor="@color/design_default_color_on_primary"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvPriceCproduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:text="Price"
            android:textColor="@color/design_default_color_on_primary"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnAddToCartCProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/drawable_button"
            android:text="Add to Cart"
            android:textColor="@color/cardview_light_background" />

    </LinearLayout>

</LinearLayout>