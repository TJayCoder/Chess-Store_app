<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".Profile">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="User Account"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Email:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etEmailAccount"
            android:layout_width="355dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_border"
            android:ems="10"
            android:enabled="false"
            android:hint="Email"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:textColor="@color/cardview_light_background"
            android:textColorHint="@color/cardview_light_background" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Contact Number:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etContactNumberAccount"
            android:layout_width="355dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_border"
            android:ems="10"
            android:hint="Contact Number"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:textColor="@color/cardview_light_background"
            android:textColorHint="@color/cardview_light_background" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Street Name:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etAddressAccount"
            android:layout_width="355dp"
            android:layout_height="45dp"
            android:background="@drawable/edittext_border"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Street Name"
            android:inputType="textMultiLine"
            android:paddingLeft="10dp"
            android:textColor="@color/cardview_light_background"
            android:textColorHint="@color/cardview_light_background" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="City:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etCityAccount"
            android:layout_width="355dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_border"
            android:ems="10"
            android:hint="City"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:textColor="@color/cardview_light_background"
            android:textColorHint="@color/cardview_light_background" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Province:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etProvinceAccount"
            android:layout_width="355dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_border"
            android:ems="10"
            android:hint="Province"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:textColor="@color/cardview_light_background"
            android:textColorHint="@color/cardview_light_background" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="355dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="5dp"
            android:text="Postal Code:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etPostalCodeAccount"
            android:layout_width="355dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_border"
            android:ems="10"
            android:hint="Postal Code"
            android:inputType="textPersonName|textPostalAddress"
            android:paddingLeft="10dp"
            android:textColor="@color/cardview_light_background"
            android:textColorHint="@color/cardview_light_background" />

        <Button
            android:id="@+id/btnupdateAccount"
            android:layout_width="355dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/drawable_button"
            android:gravity="center"
            android:text="Update"
            android:textColor="@color/cardview_light_background" />
    </LinearLayout>
</ScrollView>